{
  "name": "fnlint",
  "version": "0.0.0-development",
  "description": "File name format linter",
  "main": "index.js",
  "engines": {
    "node": ">=4.0.0"
  },
  "repository": {
    "url": "https://github.com/usabilla/fnlint.git",
    "type": "git"
  },
  "author": {
    "name": "Usabilla",
    "email": "development@usabilla.com"
  },
  "bin": {
    "fnlint": "./lib/cli.js"
  },
  "scripts": {
    "test": "jasmine JASMINE_CONFIG_PATH=jasmine.json",
    "test:coverage": "./scripts/test.sh",
    "test:watch": "watch 'npm test' ./lib ./test",
    "lint": "eslint .",
    "lint:fn": "lib/cli.js -c ./fnlint.json",
    "lint:fix": "npm run lint -- --fix",
    "start": "node .",
    "commit": "git-cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "devDependencies": {
    "@pietvanzoen/jasmine-promise-matchers": "^0.2.1",
    "@usabilla/js-styleguide": "^1.0.0",
    "commitizen": "^2.9.5",
    "condition-circle": "^1.5.0",
    "conventional-commit-types": "^2.1.0",
    "coveralls": "^2.11.15",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.12.1",
    "git-hooks": "^1.1.7",
    "istanbul": "^0.4.5",
    "jasmine": "^2.5.2",
    "jasmine-spec-reporter": "^3.1.0",
    "semantic-release": "^8.0.0",
    "validate-commit-msg": "^2.9.0",
    "watch": "^1.0.1"
  },
  "license": "MIT",
  "dependencies": {
    "colors": "^1.1.2",
    "commander": "^2.9.0",
    "glob": "^7.1.1",
    "glob-promise": "^3.1.0",
    "lodash": "^4.12.0"
  },
  "release": {
    "verifyConditions": "condition-circle"
  },
  "config": {
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "maxSubjectLength": 72
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
